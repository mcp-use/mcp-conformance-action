{
  "name": "mcp-conformance-action",
  "version": "1.0.0",
  "description": "GitHub Action for running MCP conformance tests",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build src/main.ts -o dist --source-map --license licenses.txt",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mcp-use/mcp-conformance-action.git"
  },
  "keywords": [
    "mcp",
    "conformance",
    "testing",
    "github-actions"
  ],
  "author": "MCP Use",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/artifact": "^2.1.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vercel/ncc": "^0.38.1",
    "typescript": "^5.3.3"
  }
}
